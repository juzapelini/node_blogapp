<h2>Lista de Categorias:</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small><strong>Slug: </strong>  {{slug}}</small> <br>
            <small><strong>Data de criação: </strong>  {{date}} </small><br>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-4">Edit</button></a>
            <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button class="btn btn-danger mt-2">Del</button>
            </form>
        </div>

    </div>
{{else}}
    <h4 class="mt-3">Nenhuma categoria registrada</h4>
{{/each}}

