<h2>Lista de Postagens:</h2>
<hr>
<a href="/admin/postagem/add"><button class="btn btn-success">Nova Postagem</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small><strong>Categoria: </strong>  {{categoria.nome}}</small> <br>
            <small><strong>Data de criação: </strong>  {{data}} </small><br>
            <a href="/admin/postagem/edit/{{_id}}"><button class="btn btn-success mt-4">Edit</button></a>

            <form action="/admin/postagem/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button class="btn btn-danger mt-2">Del</button>
            </form>
        </div>

    </div>
{{else}}
    <h4 class="mt-3">Nenhuma postagem registrada</h4>
{{/each}} 

